# MedAssist AI Service - Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to git - it contains secrets!

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME=MedAssist AI Service
APP_VERSION=1.0.0
ENVIRONMENT=development  # development | production
DEBUG=True  # Set to False in production

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=8000
WORKERS=4  # Use 1 for Render free tier

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================
USE_LLM=true  # Enable Groq API for real LLM inference
MODEL_NAME=llama-3.3-70b-versatile  # Groq model
MAX_TOKENS=512  # Response length limit
TEMPERATURE=0.7  # LLM creativity (0.0-1.0)

# =============================================================================
# GROQ API (FREE - Get key at https://console.groq.com)
# =============================================================================
GROQ_API_KEY=your_groq_api_key_here  # Starts with gsk_

# =============================================================================
# AZURE DOCUMENT INTELLIGENCE (Optional - Pay-per-use)
# Get keys at https://portal.azure.com
# =============================================================================
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_KEY=your_azure_doc_intelligence_key_here

# =============================================================================
# AZURE AI TRANSLATOR (Optional - Pay-per-use)
# Get keys at https://portal.azure.com
# =============================================================================
AZURE_TRANSLATOR_ENDPOINT=https://api.cognitive.microsofttranslator.com/
AZURE_TRANSLATOR_KEY=your_azure_translator_key_here
AZURE_TRANSLATOR_REGION=southafricanorth  # Or your preferred region

# =============================================================================
# SAFETY & COMPLIANCE
# =============================================================================
ENABLE_SAFETY_CHECKS=True  # Enable emergency detection
REQUIRE_HUMAN_REVIEW_THRESHOLD=7  # Triage score requiring review (1-10)
LOG_AUDIT_TRAIL=True  # Log all medical interactions

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR
LOG_FILE=logs/ai-service.log

# =============================================================================
# OPTIONAL: Redis (For caching and session storage)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=  # Leave empty if no password
CONVERSATION_EXPIRY_SECONDS=3600  # 1 hour

# =============================================================================
# OPTIONAL: MongoDB (For persistent storage)
# =============================================================================
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=medassist

# =============================================================================
# OPTIONAL: Backend Integration
# =============================================================================
BACKEND_API_URL=http://localhost:8080  # Spring Boot backend URL
BACKEND_API_KEY=  # Optional API key for backend auth
