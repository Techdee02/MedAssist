# MedAssist AI Service - Production Environment Variables
# Use these settings for Render deployment

# Application Configuration
APP_NAME=MedAssist AI Service
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=False

# Server Configuration (Render sets PORT automatically)
HOST=0.0.0.0
WORKERS=1  # Free tier: single worker

# AI Model Configuration
USE_LLM=true
MODEL_NAME=llama-3.3-70b-versatile
MAX_TOKENS=512
TEMPERATURE=0.7

# Groq API (Set in Render dashboard)
# GROQ_API_KEY=<set-in-render-dashboard>

# Azure Services (Optional - Set in Render dashboard)
# AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=<set-in-render-dashboard>
# AZURE_DOCUMENT_INTELLIGENCE_KEY=<set-in-render-dashboard>
# AZURE_TRANSLATOR_ENDPOINT=https://api.cognitive.microsofttranslator.com/
# AZURE_TRANSLATOR_KEY=<set-in-render-dashboard>
# AZURE_TRANSLATOR_REGION=southafricanorth

# Safety & Compliance
ENABLE_SAFETY_CHECKS=True
REQUIRE_HUMAN_REVIEW_THRESHOLD=7
LOG_AUDIT_TRAIL=True

# Logging
LOG_LEVEL=INFO
